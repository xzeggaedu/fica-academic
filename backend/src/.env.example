# ===========================================
# FICA ACADEMIC - BACKEND EXAMPLE
# ===========================================
# Este archivo contiene todas las variables de entorno necesarias
# Copia este archivo a .env y ajusta los valores según tu entorno

# Application
APP_NAME="Academics 1.0 | UTEC"
APP_DESCRIPTION="API web contenerizada que centraliza y automatiza la generación de estadísticos descriptivos y analíticos de la carga académica de la Facultad de Informática y Ciencias Aplicadas (FICA) de la UTEC."
APP_VERSION="0.1.0"

# Database Configuration
# Nota: Para desarrollo local, cambiar POSTGRES_SERVER a "localhost" o "127.0.0.1"
# Para Docker, usar "db" (nombre del servicio en docker-compose)
POSTGRES_USER="tu_usuario_postgres"
POSTGRES_PASSWORD="tu_contraseña_segura_aqui"
POSTGRES_SERVER="db"
POSTGRES_PORT=5432
POSTGRES_DB="fica_academic"

# Security Configuration
# IMPORTANTE: Genera tu propia SECRET_KEY usando: openssl rand -base64 64
SECRET_KEY="tu_secret_key_generada_con_openssl_rand_base64_64"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration
# Nota: Para desarrollo local, cambiar REDIS_*_HOST a "localhost" o "127.0.0.1"
# Para Docker, usar "redis" (nombre del servicio en docker-compose)
REDIS_CACHE_HOST="redis"
REDIS_CACHE_PORT=6379
REDIS_QUEUE_HOST="redis"
REDIS_QUEUE_PORT=6379
CLIENT_CACHE_MAX_AGE=30

# Admin User (Usuario inicial del sistema)
ADMIN_NAME="Nombre del Administrador"
ADMIN_EMAIL="admin@example.com"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="Tu_Contraseña_Segura_123!"

# PGAdmin Configuration (opcional, solo para desarrollo)
PGADMIN_DEFAULT_EMAIL="admin@example.com"
PGADMIN_DEFAULT_PASSWORD="Tu_Contraseña_PGAdmin_123!"
PGADMIN_LISTEN_PORT=80

# Environment
# Valores posibles: local, staging, production
ENVIRONMENT="local"
COMPOSE_FILE_PATH="windows_or_linux_path"

# Demo Users (Opcional)
# Estas variables son opcionales y solo se usan si se ejecutan los seeders de usuarios demo
DEMO_PASSWORD="password_demo_seguro"
VICERRECTOR_USER="vicerrector"
DECANO_USER="decano"
DIRECTOR_USER_1="director1"
DIRECTOR_USER_2="director2"
