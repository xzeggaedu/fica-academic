# ===========================================
# FICA ACADEMIC - FRONTEND2.0 EXAMPLE
# ===========================================
# Este archivo contiene todas las variables de entorno necesarias
# Copia este archivo a .env.development o .env.production y ajusta los valores

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_BASE_PATH=/api/v1

# Authentication Endpoints
VITE_AUTH_LOGIN_ENDPOINT=/api/v1/login
VITE_AUTH_LOGOUT_ENDPOINT=/api/v1/logout
VITE_AUTH_REFRESH_ENDPOINT=/api/v1/refresh
VITE_AUTH_ME_ENDPOINT=/api/v1/me

# Application Configuration
VITE_APP_NAME=Fica Academic
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=Academic Management System - Frontend 2.0

# Development Configuration
VITE_DEV_TOOLS=false
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Security Configuration
VITE_TOKEN_STORAGE_KEY=fica-access-token
VITE_REFRESH_TOKEN_STORAGE_KEY=fica-refresh-token

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_FORGOT_PASSWORD=true
VITE_ENABLE_USER_MANAGEMENT=true
VITE_ENABLE_ROLE_MANAGEMENT=true

# External Services
VITE_AVATAR_SERVICE_URL=https://ui-avatars.com/api
VITE_AVATAR_DEFAULT_BG=random

# Performance Configuration
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# Development Tools (solo en desarrollo)
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false
